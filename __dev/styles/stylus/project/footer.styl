.footer
	background #4f5a67
	padding: 80px 0 22px;
	min-width 1000px
	color #7f8895
	height: 392px;
	position: absolute;
	bottom: 0;
	left: 0;
	width: 100%;
	overflow: hidden;
	border-box()
	a
		color #818b98
		&:hover
			color #fff
	&-line
		text-align: justify;
		position relative
		&:after
			content: '';
			display: inline-block;
			width: 100%;

	&-logo
		display inline-block
		vertical-align top
		margin-right 20px
	&-nav
		&-ctn
			margin-bottom 68px
			display inline-block
			vertical-align top
			color #a6adb5
			position relative
		&-item
			margin-bottom 10px
			font-size 15px
			color #a6adb5
		&-link, a&-link
			text-decoration none
			color #a6adb5
			&:hover, &.__active
				color #fff
	&-links
		font-size 10px
		line-height: 12px;
