.main-video
	position relative
	max-width 1081px
	height 630px
	overflow hidden
	margin 0 auto
	@media screen and (max-width:1250px)
		&:before, &:after
			position absolute
			top 0
			z-index 1
			content ''
			width 100px
			height: 100%;
		&:before
			left 0
			background images('bg/gradient-left.png') repeat-y
		&:after
			right 0
			background images('bg/gradient-right.png') repeat-y

	&-file
		position: absolute;
		left: 50%;

		top: 0;
		margin-left: -540px;

