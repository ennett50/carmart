.main-video
	position relative
	max-width 1081px
	height 630px
	overflow hidden
	margin 0 auto
	@media screen and (max-width:1250px)
		&:before, &:after
			position absolute
			top 0
			z-index 1
			content ''
			width 100px
			height: 100%;
		&:before
			left 0
			background images('bg/gradient-left.png') repeat-y
		&:after
			right 0
			background images('bg/gradient-right.png') repeat-y
	&-file
		position: absolute;
		left: 50%;
		top: 0;
		margin-left: -540px;
	&-info
		position absolute
		top 0
		right 0
		z-index 5
		text-align right
	&-title
		font-weight 900
		font-style italic
		text-transform uppercase
		font-size 31px
		color #fe4040
		margin-bottom 5px
		letter-spacing: -0.7px;
	&-description
		background #f2f3f5
		padding 3px 8px
		font-weight 900
		font-style italic
		color #535a66
		font-size 14px
		position relative
		right 15px
		margin-bottom 10px
		&:before
			content: '';
			width: 0;
			height: 0;
			border-bottom: 20px solid #f2f3f5;
			border-left: 5px solid transparent;
			position: absolute;
			top: 0;
			left: -5px;
		&:after
			content: '';
			width: 0;
			height: 0;
			border-top: 20px solid #f2f3f5;
			border-right: 5px solid transparent;
			position: absolute;
			top: 0;
			right: -5px;
	&-icon
		display inline-block
		vertical-align middle
		margin-right 20px