.benefit
	position relative
	margin-bottom 35px
	min-height 236px
	&:after
		clear both
		content ''
		display block
	&-item
		height: 118px;
		float left
		font-size 14px
		padding-left 7px
		border-box()
		position relative
		a
			color #10aa8b
		&:hover
			.benefit-item-content
				opacity 1
				visibility visible
		&-content
			line-height: 20px;
			position absolute
			background #fff
			trans()
			opacity 0
			visibility hidden
			z-index 1
			top: 0;
			left: 0;
			width: 100%;
			height 118px
			border-box()
		&-title
			position relative
			text-transform: uppercase;
			font-size: 18px;
			margin-bottom 5px
			padding-left 10px

		&-scale
			background: #535a66;
			color: #f2f3f5;
			display: inline-block;
			margin-bottom: 7px;
			font-variant: normal;
			font-style: normal;
			font-weight  900
			font-size: 18px;
			padding: 8px 10px;
			position relative
			&:before, &:after
				content: '';
				width: 0;
				height: 0;
				position: absolute;
				top: 0;
			&:before
				border-bottom: 34px solid #535a66;
				border-left: 7px solid transparent;
				left -7px
			&:after
				border-top: 34px solid #535a66;
				border-right: 7px solid transparent;
				right: -7px;
		&.__width-22
			width 22%
		&.__width-40
			width 40%
		&.__width-32
			width 32%
		&.__width-28
			width 28%
		&.__width-18
			width 18%
		&.__width-32
			width 32%
		&.__car
			position: relative;
			left: 59px;
			top: 0px;
			.benefit-item-title
				font-size: 24px;
			.benefit-item-scale
				font-size: 24px;
				padding: 5px 10px;
			.benefit-item-desc
				margin-left 50px
				max-width 205px
			.benefit-item-content
				top: -1px;
				left: -4px;
				&:before
					position: relative;
					left: -9px;
					top: 15px;
					display inline-block
					content ''
					float left
					sprite($s-icon-benefit-car)
		&.__pay
			position: relative;
			top: 11px;
			left: 128px;
			.benefit-item-desc
				margin-left 47px
				max-width 113px
			.benefit-item-content
				top: -9px;
				left: -5px;
				width: 68%;
				padding-left: 0;
				&:before
						display inline-block
						float left
						position: relative;
						z-index: 2;
						top: 24px;
						left: -4px;
						content ''
						sprite($s-icon-benefit-pay)
		&.__warranty
			position: relative;
			left: 99px;
			top: 11px;
			padding-left: 48px;
			.benefit-item-content
				top: -31px;
				left: -16px;
			.benefit-item-desc
				max-width 230px
		&.__buy
			position: relative;
			left: 121px;
			top: 11px;

			.benefit-item-desc
				margin-left 53px
				max-width 225px
			.benefit-item-content
				top: -17px;
				&:before
					display inline-block
					content ''
					float left
					top: 24px;
					position relative
					sprite($s-icon-benefit-buy)
		&.__free
			position: relative;
			left: 73px;
			top: 1px;
			.benefit-item-desc
				margin-left 70px
				max-width 245px
			.benefit-item-content
				top: -32px;
				left: -26px;
				padding-top: 20px;

				&:before
					top: 24px;
					position relative
					display inline-block
					content ''
					float left
					sprite($s-icon-benefit-free)
		&.__reliability
			position: relative;
			left: 182px;
			padding-left: 6px;
			top: -3px;
			.benefit-item-title
				font-size: 24px;
			.benefit-item-scale
				font-size: 24px;
				padding: 5px 10px;
				background-color: #ff6262;
				&:before
					border-bottom-color #ff6262;
				&:after
					border-top-color #ff6262;
			.benefit-item-desc
				margin-left 67px
				max-width: 315px;
				font-size: 16px;
				position: relative;
				top: 6px;
			.benefit-item-content
				padding-top 22px
				left: -78px;
				top: -14px;
				width: 83%;

				&:before
					display inline-block
					content ''
					float left
					sprite($s-icon-benefit-reliability)

		&.__online
			position: relative;
			top: -24px;
			left: 124px;
			padding-top: 24px;
			padding-left: 45px;
			text-align: left;
			.benefit-item-desc
				margin-left 52px
				max-width 240px

			.benefit-item-content
				padding-top: 21px;
				&:before
					position relative
					top 22px
					display inline-block
					content ''
					float left
					sprite($s-icon-benefit-online)


