		&.__car
			.benefit-item-scale
				font-size: 22px;
				&:before
					content: '';
					width: 0;
					height: 0;
					border-bottom: 28px solid #535a66;
					border-left: 5px solid transparent;
					position: absolute;
					top: 0;
					left: -5px;
				&:after
					content: '';
					width: 0;
					height: 0;
					border-top: 28px solid #535a66;
					border-right: 5px solid transparent;
					position: absolute;
					top: 0;
					right: -5px;
			.benefit-item-content
				&:after
					display inline-block
					content ''
