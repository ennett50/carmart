body
	background transparent
	border-box()
main
	position relative


.wrapper-content
	clear()

.button
	text-decoration: none;
	text-align: center;
	display: inline-block;
	outline 0;
	border: 0
	cursor pointer
	vertical-align middle
	border-box()
	font-size 15px
	text-shadow 0 2px 0 #e3771e
	padding: 0 14px;
	line-height 44px
	height 44px
	background: #e68422;
	color: #fff;
	border-radius 2px
	border-bottom 2px solid #dd7010
	position relative
	trans()

	&:hover, &.__hover
		background #f26c0c
		border-color #f26c0c
		color #fff
	&:focus, &.__focus, &:active
		background #e64d00
		border-color #e64d00
		color #fff

	&-info
		text-decoration: none;
		text-align: center;
		display: inline-block;
		outline 0;
		border: 0
		cursor pointer
		vertical-align middle
		border-box()
		font-size 12px
		font-weight 700
		padding: 0 8px;
		line-height 33px
		height 30px
		background: #fff;
		color: #848d9a;
		border-radius 5px
		text-transform uppercase
		trans()
		&:hover
			color #07aa8a
	&-detail
		text-decoration: none;
		text-align: center;
		display: inline-block;
		outline 0;
		border: 0
		cursor pointer
		vertical-align middle
		border-box()
		font-size 15px
		font-weight 900
		color #fff
		padding: 0 5px;
		line-height 44px
		height 44px
		background: #00ac8b;
		text-transform uppercase
		trans()
		width 140px
		position relative
		&:before
			content ''
			display inline-block
			position absolute
			left 50%
			top 50%
			margin-top -12px
			margin-left -36px
			sprite($s-icon-basket-big)
			trans()
			opacity 0
			visibility hidden
		&:hover
			color #00ac8b
			&:before
				left 0
				opacity 1
				margin-left 50px
				visibility visible

.falseLink
	display inline
	border-bottom 1px dashed #c02a1b
	text-decoration none!important
	color #c02a1b
	cursor pointer
	&:hover, &:active
		color: #e13726;
		border-color #e13726;

.hr
	clear()
	display block
	size(auto, 0)
	border-bottom 1px dashed #b7b7b7
	margin 20px 0

img
	max-width 100%
.title-bordered
	position relative
	margin-bottom 20px
	text-align center
	h2
		color: #4f5a67;
		font-family: "Roboto",sans-serif;
		font-size: 35px;
		font-weight: 300;
		text-align: center;
		text-transform: none;
		background #fff
		padding 0 18px
		position relative
		z-index 2
		display inline-block

	&:after
		content ''
		border-bottom  2px solid #f2f3f5
		display block
		position relative
		z-index 1
		top: -8px;
		height: 1px;
a
	trans();

.clear
	clear()

.link-more
	color #545861
	text-decoration none
	border-bottom 1px dotted #545861
	cursor pointer
	display inline-block
	font-size: 15px;
	trans()
	&:hover
		color #07aa8a
		border-color #07aa8a

.right-column
	width 100%
	margin-left -140px
	position relative
	float right
	.content
		margin-left 140px

.hint-price
	color #fff
	position absolute
	top 10px
	left 0
	background #10aa8b
	z-index 5
	font-size 15px
	border-radius 0 5px 5px 0
	padding 13px 15px 12px 15px

.__through
	text-decoration line-through