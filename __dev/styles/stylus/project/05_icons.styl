.arrow-down
	position relative
	sprite($s-arrow-down);
.icon
	&-reliability
		sprite($s-icon-reliability)
	&-online
		sprite($s-icon-online)
	&-free
		sprite($s-icon-free)
	&-buy
		sprite($s-icon-buy)
	&-pay
		sprite($s-icon-pay)
	&-car
		sprite($s-icon-car)


.icon-mustache
	width 34px
	height 34px
	line-height 34px
	text-align center
	background #fff
	border-radius 50%
	&:before
		content ''
		display inline-block
		position: relative;
		left: 0.5px;
		sprite($s-icon-mustache)

.icon-calc
	&:before
		content ''
		sprite($s-icon-calc-silver)
		display inline-block
		vertical-align middle
		margin-right 8px

.icon-ok
	width 34px
	height 34px
	line-height 34px
	text-align center
	background #ff6262
	border-radius 50%
	&:before
		content ''
		display inline-block
		position: relative;
		top: 3px;
		left: 0.5px;
		sprite($s-icon-ok)