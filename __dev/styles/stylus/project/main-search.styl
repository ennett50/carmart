.main-search
	position absolute
	width 690px
	left 50%
	margin-left -345px
	bottom: 110px;
	background #fff
	&:before
		content: '';
		width: 0;
		height: 0;
		border-bottom: 55px solid #ffffff;
		border-left: 11px solid transparent;
		position: absolute;
		top: 0;
		left: -11px;
	&:after
		content: '';
		width: 0;
		height: 0;
		border-top: 55px solid #ffffff;
		border-right: 11px solid transparent;
		position: absolute;
		top: 0;
		right: -11px;
	&-text
		text-transform uppercase
		font-size 18px
		border-box()
		width 94%
		padding 17px 10px 16px
		line-height normal
	&-btn
		position absolute
		cursor pointer
		z-index 2
		right: 14px;
		top: 15px;
		trans()
		sprite($s-icon-main-search)
		&:hover
			opacity 0.7
