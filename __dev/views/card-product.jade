		div.card-product-gallery
			-var i = 1
			ul.js-catalog-slider
				-for (i;i<3;i++)
					li
						a(href="#video-content").icon-play.js-fancybox
							img(src="images/example/vin/#{i}.png" alt="")
						div#video-content.hidden
							object(type='application/x-shockwave-flash', data='images/player/player_flv_multi.swf', width='1081', height='540')
								param(name='movie', value='images/player/player_flv_multi.swf')
